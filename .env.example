# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

OPENAI_ORG_ID=your-org-id-here-optional

# Model Configuration
MODEL_NANO=gpt-5-nano
MODEL_MINI=gpt-5-mini
MODEL_STANDARD=gpt-5

# Cost Limits (USD)
MONTHLY_BUDGET=100.00
DAILY_BUDGET=3.33
PER_REQUEST_LIMIT=0.50

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=williams_librarian
POSTGRES_USER=librarian
POSTGRES_PASSWORD=change-me-in-production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION_NAME=librarian_embeddings

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_REGION=us-east-1

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=dev_password_change_in_production

# Ollama Local LLM
OLLAMA_HOST=http://localhost:11434

# Library Configuration
LIBRARY_ROOT=./library
TIER_A_THRESHOLD=9.0
TIER_B_THRESHOLD=7.0
TIER_C_THRESHOLD=5.0

# Application Configuration
LOG_LEVEL=INFO
LOG_FILE=./data/logs/librarian.log
CACHE_DIR=./data/cache
MAX_CACHE_SIZE_GB=10

# Worker Configuration
WORKER_CONCURRENCY=4
BATCH_SIZE=10
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=2

# UI Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_THEME=dark

# Feature Flags
ENABLE_CACHING=true
ENABLE_BATCH_PROCESSING=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_PLUGINS=true
